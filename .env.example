# Environment Configuration for Geo Attendance Pro
# Copy this file to .env and update the values

# Flask Configuration
FLASK_CONFIG=production
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-too

# Database Configuration (SQLite for production)
DATABASE_URL=sqlite:///geo_attendance_prod.db

# Security Settings
MIN_GPS_ACCURACY=15
DEFAULT_GEOFENCE_RADIUS=50
LOCATION_CONFIRMATIONS_REQUIRED=3

# Optional: Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password