# Geo Attendance Pro Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
FLASK_CONFIG=development
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///geo_attendance.db
# For PostgreSQL: postgresql://username:password@localhost/geo_attendance
# For MySQL: mysql://username:password@localhost/geo_attendance

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Location Security Settings
MIN_GPS_ACCURACY=15
DEFAULT_GEOFENCE_RADIUS=50
LOCATION_CONFIRMATIONS_REQUIRED=3

# Logging
LOG_TO_STDOUT=false

# Security Settings (Production)
SESSION_COOKIE_SECURE=true
WTF_CSRF_ENABLED=true